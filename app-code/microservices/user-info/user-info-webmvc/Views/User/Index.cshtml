            <td>Address:</td>
            <td><select id="addresses"></select></td>
        </tr>
        <tr>
            <td colspan="2">&nbsp;</td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <input type="button" id="link" 
                       value="Link" />
                <input type="button" id="unlink" 
                       value="Unlink" />
            </td>
        </tr>
    </table>
